#!/usr/bin/env bash

# import dev0s library.
#curl https://raw.githubusercontent.com/vandenberghinc/dev0s/master/dev0s/lib/bash/import | bash 
lib="$(dirname $(dirname $0))/lib/"
if [[ "$OSTYPE" =~ "darwin" ]] ; then
    source $lib/bash/import --lib $lib
else
    . $lib/bash/import --lib $lib
fi

# the alias.
alias="dev0s"

# the pypi package name (may differ from alias).
pypi_name=$alias

# boolean indicating whether the package is an pypi package.
pypi_package="true"

# execute packge installer.
remote-install-package \
    --alias $alias \
    --pypi-name $pypi_name \
    --pypi-package $pypi_package \
    $@
